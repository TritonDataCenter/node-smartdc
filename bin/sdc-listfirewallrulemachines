#!/usr/bin/env node
// -*- mode: js -*-
// vim: set filetype=javascript :
// Copyright 2013 Joyent, Inc.  All rights reserved.

var url = require('url');

var common = require('../lib/cli_common');



// --- Globals

var Options = {
    'account': String,
    'debug': Boolean,
    'help': Boolean,
    'keyId': String,
    'url': url,
    'version': Boolean,
    'verbose': Boolean,
    'user': String,
    'role': String
};

var ShortOptions = {
    'a': ['--account'],
    'd': ['--debug'],
    'h': ['--help'],
    '?': ['--help'],
    'k': ['--keyId'],
    'u': ['--url'],
    'v': ['--verbose'],
    'A': ['--user']
};

var usageStr = common.buildUsageString(Options) + ' fwrule_id';
usageStr += common.buildDetailedUsageString(Options);

// --- Mainline

common.parseArguments(Options, ShortOptions, function (parsed) {
    if (parsed.argv.remain.length < 1) {
        common.usage(usageStr, 1, 'fwrule(id) required');
    }

    var client = common.newClient(parsed);
    parsed.argv.remain.forEach(function (fwrule) {
        client.listRuleMachines(fwrule, common.callback);
    });
}, usageStr);
