#!/usr/bin/env node
// -*- mode: js -*-
// vim: set filetype=javascript :
// Copyright 2013 Joyent, Inc.  All rights reserved.

var url = require('url');

var common = require('../lib/cli_common');



// --- Globals

var Options = {
    'account': String,
    'api-version': String,
    'debug': Boolean,
    'help': Boolean,
    'keyId': String,
    'url': url,
    'mantaPath': String,
    'version': Boolean,
    'verbose': Boolean,
    'user': String,
    'role': String
};

var ShortOptions = {
    'a': ['--account'],
    'd': ['--debug'],
    'h': ['--help'],
    '?': ['--help'],
    'k': ['--keyId'],
    'u': ['--url'],
    'v': ['--verbose'],
    'm': ['--mantaPath'],
    'A': ['--user']
};

var usageStr = common.buildUsageString(Options) + ' image_id';
usageStr += common.buildDetailedUsageString(Options);


// --- Mainline

common.parseArguments(Options, ShortOptions, function (parsed) {
                var mantaPath;
    if (parsed.argv.remain.length < 1) {
        common.usage(usageStr, 1, 'image required');
    }
    if (parsed.mantaPath)
        mantaPath = parsed.mantaPath;
    else
        common.usage(usageStr, 1, 'mantaPath(string) required');

    var client = common.newClient(parsed);
    parsed.argv.remain.forEach(function (image) {
        client.exportImage(image, mantaPath, common.callback);
    });
}, usageStr);
