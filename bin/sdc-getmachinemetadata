#!/usr/bin/env node
// -*- mode: js -*-
// vim: set filetype=javascript :
// Copyright 2013 Joyent, Inc.  All rights reserved.

var url = require('url');

var common = require('../lib/cli_common');



// --- Globals

var Options = {
    'account': String,
    'credentials': Boolean,
    'debug': Boolean,
    'help': Boolean,
    'keyId': String,
    'metadata': String,
    'url': url,
    'version': Boolean,
    'user': String,
    'as-role': String
};

var ShortOptions = {
    'a': ['--account'],
    'c': ['--credentials'],
    'd': ['--debug'],
    'h': ['--help'],
    '?': ['--help'],
    'k': ['--keyId'],
    'm': ['--metadata'],
    'u': ['--url'],
    'A': ['--user'],
    'R': ['--as-role']
};

var usageStr = common.buildUsageString(Options) + ' machine_id';
usageStr += common.buildDetailedUsageString(Options);


// --- Mainline

common.parseArguments(Options, ShortOptions, function (parsed) {
    if (parsed.argv.remain.length < 1) {
        common.usage(usageStr, 1, 'machine required');
    }

    function callback(err, obj) {
        if (err) {
            try {
                console.error(JSON.parse(err.message).message);
            } catch (e) {
                console.error(err.message);
            }
            process.exit(3);
        }

        console.log(JSON.stringify(obj, null, 2));
        process.exit(0);
    }

    var client = common.newClient(parsed);

    parsed.argv.remain.forEach(function (machine) {
        client.getMachineMetadata(machine,
                                  parsed.credentials || false,
                                  callback);
    });
}, usageStr);
