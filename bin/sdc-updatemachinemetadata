#!/usr/bin/env node
// -*- mode: js -*-
// vim: set filetype=javascript :
// Copyright 2013 Joyent, Inc.  All rights reserved.

var url = require('url');
var fs = require('fs');

var common = require('../lib/cli_common');



// --- Globals

var Options = {
    'account': String,
    'debug': Boolean,
    'help': Boolean,
    'keyId': String,
    'metadata': [String, Array],
    'metadata-file': [String, Array],
    'url': url,
    'version': Boolean
};

var ShortOptions = {
    'a': ['--account'],
    'd': ['--debug'],
    'h': ['--help'],
    '?': ['--help'],
    'k': ['--keyId'],
    'm': ['--metadata'],
    'M': ['--metadata-file'],
    'u': ['--url']
};

var usageStr = common.buildUsageString(Options);
usageStr += ' machine_id';
usageStr += common.buildDetailedUsageString(Options);

// --- Mainline

common.parseArguments(Options, ShortOptions, function (parsed) {

    if (parsed.argv.remain.length < 1) {
        common.usage(usageStr, 1, 'machine required');
    }

    if (!parsed.metadata && !parsed['metadata-file']) {
        common.usage(usageStr, 1, '--metadata or --metadata-file required');
    }

    var metadata = {};

    metadata = common.mergeObjects(metadata, common.parseMetadata(
        parsed['metadata-file'], true));
    metadata = common.mergeObjects(metadata, common.parseMetadata(
        parsed['metadata'], false));

    var client = common.newClient(parsed);
    parsed.argv.remain.forEach(function (machine) {
        client.updateMachineMetadata(machine, metadata, common.callback);
    });
}, usageStr);
